{
  "name": "@ndamulelonemakh/ignore-cli",
  "version": "1.0.2",
  "description": "A convenient command line tool for adding .ignore files to your project",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ign": "dist/cli.js",
    "ignore": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint ./src ./tests",
    "lint:fix": "biome lint --write ./src ./tests",
    "format": "biome format --write ./src ./tests",
    "format:check": "biome format ./src ./tests",
    "check": "biome check ./src ./tests",
    "check:fix": "biome check --write ./src ./tests",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "gitignore",
    "dockerignore",
    "ignore",
    "ignore-cli",
    "cli",
    "templates",
    "generator",
    "github"
  ],
  "author": "endeesa (@NdamuleloNemakh)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndamulelonemakh/ignore-cli.git"
  },
  "bugs": {
    "url": "https://github.com/ndamulelonemakh/ignore-cli/issues"
  },
  "homepage": "https://github.com/ndamulelonemakh/ignore-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "ReadMe.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
